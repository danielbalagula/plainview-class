<body style="background-color:#FCFCFC">
<link rel='stylesheet' href='/stylesheets/graph.css' />
<link rel='stylesheet' href='/stylesheets/animate.css' />

<script src="/javascripts/handlebars.min-latest.js"></script>
<script src="/javascripts/d3.v3.min.js"></script>
<script src="/javascripts/dagre-d3.js"></script>
<script src="/javascripts/underscore.js"></script>
<script src="/javascripts/interface.js"></script>
<script src="/javascripts/templates.js"></script>
<script src="/javascripts/bootstrap-notify-3.1.3/bootstrap-notify.js"></script>
<script src="/javascripts/socket.io-client-master/socket.io.js"></script>

<script src="https://cdn.jsdelivr.net/vue.resource/1.0.3/vue-resource.min.js"></script>

<div id="interface">
	<svg style="stroke-width: 0px; background-color: #fcfcfc;" id="debateExperience" width=100% height=800px><g/></svg>
</div>

<div class="modal modal-wide fade" id="responseModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
	<div class="modal-content">
	  <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<h4 class="modal-title" id="myModalLabel">Find a Response</h4>
	  </div>
	  <div id="responseBrowser" class="modal-body">
		<form>
		  <div class="form-group form-inline">
			<label for="citationIdInput">Search for a specific response</label>
			<input type="text" class="form-control" id="citationIdInput" placeholder="Citation id">
			<button type="submit" class="btn btn-default" id="responseBrowserCitationIdSearch">Submit</button>
		  </div>
		</form>
		<div class="container">
		  <div class="row">
			<div class="col-sm-6">
			  <form id="responseBrowserSearch">
				
				<div class="form-group">
					<label for="email">Response titles</label>
					<input type="text" class="form-control" id="responseTitle" name="responseTitle" placeholder="Titles">
				</div>
				<div class="form-group">
					<label for="email">Contains keywords</label>
					<input type="text" class="form-control" id="responseKeywords" name="responseKeywords" placeholder="Keywords">
				</div>
				<div class="form-group"> 
					<button class="btn btn-default" id="responseBrowserSearchButton">Search</button>
				</div>
			  
			  </form>
			</div>
			<div id="responses" class="col-sm-6">
			  
			</div>
		  </div>
		</div>
	  </div>
	</div>
  </div>
</div>

<div class="discussionId" id="{{discussionId}}"></div>
</body>